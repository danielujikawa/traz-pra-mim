<%= simple_form_for [@user, @route] do |f| %>
  <div class="form-group">
    <%= f.label :origin %>
    <%= f.text_field :origin, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :destination %>
    <%= f.text_field :destination, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :capacity %>
    <%= f.text_field :capacity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :start_date_time %>
    <%= f.text_field :start_date_time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :end_date_time %>
    <%= f.text_field :end_date_time, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

